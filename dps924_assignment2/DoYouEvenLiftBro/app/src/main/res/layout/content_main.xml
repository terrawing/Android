<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.example.student.doyouevenliftbro.MainActivity"
    tools:showIn="@layout/activity_main">


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:id="@+id/mainlinearlayout"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:layout_centerHorizontal="true">

            <LinearLayout
                android:orientation="horizontal"
                android:id="@+id/spacer1"
                android:layout_width="match_parent"
                android:layout_height="40dp"></LinearLayout>

            <LinearLayout
                android:layout_below="@+id/spacer1"
                android:layout_centerHorizontal="true"
                android:orientation="vertical"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/linearLayout">

                <TextView
                    android:id="@+id/title1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Do You Even Lift"
                    android:textColor="@color/colorBlack"
                    android:textSize="24dp"/>
                <TextView
                    android:layout_below="@+id/title1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="BRO?"
                    android:textColor="@color/colorBlack"
                    android:textSize="72dp"
                    android:textStyle="bold"
                    android:layout_marginTop="-28dp"/>

            </LinearLayout>

            <LinearLayout
                android:layout_below="@+id/linearLayout"
                android:orientation="horizontal"
                android:id="@+id/spacer2"
                android:layout_width="match_parent"
                android:layout_height="30dp"></LinearLayout>


            <LinearLayout
                android:id="@+id/buttonSet1"
                android:gravity="center_horizontal"
                android:layout_below="@+id/spacer2"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <!-- http://stackoverflow.com/questions/2283444/android-image-button -->
                <Button
                    android:id="@+id/viewAllExerciseBtn"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="View All Exercises"
                    android:textSize="18dp"
                    android:padding="24dp"
                    android:textAllCaps="false"/>

                <Button
                    android:layout_below="@+id/viewAllExerciseBtn"
                    android:id="@+id/viewExerciseByMuscleBtn"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="View Exercises By Muscle"
                    android:textSize="18dp"
                    android:padding="24dp"
                    android:textAllCaps="false"/>

                <Button
                    android:layout_below="@+id/viewExerciseByMuscleBtn"
                    android:id="@+id/displayNDoExercisesBtn"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="Display And Do Exercises"
                    android:textSize="18dp"
                    android:padding="24dp"
                    android:textAllCaps="false"/>

                <Button
                    android:layout_below="@+id/displayNDoExercisesBtn"
                    android:id="@+id/optionsBtn"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="Options"
                    android:textSize="18dp"
                    android:padding="24dp"
                    android:textAllCaps="false"/>

            </LinearLayout>

            <LinearLayout
                android:layout_below="@+id/buttonSet1"
                android:orientation="horizontal"
                android:id="@+id/spacer3"
                android:layout_width="match_parent"
                android:layout_height="40dp"></LinearLayout>

            <LinearLayout
                android:layout_below="@+id/spacer3"
                android:layout_centerHorizontal="true"
                android:orientation="vertical"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_alignParentBottom="true"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Version 1.0. Developed By: William Wong"/>

            </LinearLayout>

        </LinearLayout>

    </ScrollView>

</RelativeLayout>
